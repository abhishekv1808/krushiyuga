                <script>
                    // Category filter functionality with enhanced features
                    const categoryBtns = document.querySelectorAll('.category-btn');
                    const galleryCards = document.querySelectorAll('.gallery-card');

                    // Define category mappings
                    const categoryMap = {
                        'All Livestock': 'all',
                        'üêê Osmanabadi Goats': 'goats',
                        'üêë Sheep': 'sheep',
                        'üêî Poultry': 'poultry'
                    };

                    // Assign categories to cards based on their content
                    function assignCategories() {
                        galleryCards.forEach(card => {
                            const title = card.querySelector('h3').textContent.toLowerCase();
                            if (title.includes('goat') || title.includes('osmanabadi') || title.includes('buck') || title.includes('kid')) {
                                card.dataset.category = 'goats';
                            } else if (title.includes('sheep')) {
                                card.dataset.category = 'sheep';
                            } else if (title.includes('poultry') || title.includes('chicken')) {
                                card.dataset.category = 'poultry';
                            } else {
                                card.dataset.category = 'general';
                            }
                        });
                    }

                    // Filter cards with smooth animation
                    function filterCards(category) {
                        galleryCards.forEach((card, index) => {
                            const cardCategory = card.dataset.category;
                            const shouldShow = category === 'all' || cardCategory === category || cardCategory === 'general';

                            if (shouldShow) {
                                card.style.display = 'block';
                                setTimeout(() => {
                                    card.style.opacity = '1';
                                    card.style.transform = 'translateY(0)';
                                }, index * 50);
                            } else {
                                card.style.opacity = '0';
                                card.style.transform = 'translateY(20px)';
                                setTimeout(() => {
                                    card.style.display = 'none';
                                }, 300);
                            }
                        });
                    }

                    // Add event listeners to category buttons
                    categoryBtns.forEach(btn => {
                        btn.addEventListener('click', () => {
                            // Remove active class from all buttons
                            categoryBtns.forEach(b => {
                                b.classList.remove('active');
                                b.classList.remove('bg-emerald-600', 'text-white');
                                b.classList.add('bg-gray-100', 'text-gray-700');
                            });

                            // Add active class to clicked button
                            btn.classList.add('active');
                            btn.classList.remove('bg-gray-100', 'text-gray-700');
                            btn.classList.add('bg-emerald-600', 'text-white');

                            // Get category and filter
                            const category = categoryMap[btn.textContent.trim()];
                            filterCards(category);

                            // Update URL hash for bookmarking
                            window.location.hash = category;
                        });
                    });

                    // Gallery card hover effects and interactions
                    galleryCards.forEach(card => {
                        const img = card.querySelector('img');
                        const overlay = card.querySelector('.overlay-content');
                        const viewMoreBtn = card.querySelector('button');

                        // Enhanced hover effects
                        card.addEventListener('mouseenter', () => {
                            overlay.style.opacity = '1';
                            overlay.style.background = 'rgba(0, 0, 0, 0.6)';
                            card.style.transform = 'translateY(-5px)';
                            card.style.boxShadow = '0 20px 40px rgba(0, 0, 0, 0.15)';
                        });

                        card.addEventListener('mouseleave', () => {
                            overlay.style.opacity = '0';
                            overlay.style.background = 'transparent';
                            card.style.transform = 'translateY(0)';
                            card.style.boxShadow = '0 10px 20px rgba(0, 0, 0, 0.1)';
                        });

                        // View More button functionality
                        viewMoreBtn.addEventListener('click', (e) => {
                            e.preventDefault();
                            const title = card.querySelector('h3').textContent;
                            const price = card.querySelector('.text-emerald-600').textContent;
                            const description = card.querySelector('.text-gray-600').textContent;

                            // Create modal or alert with details
                            showItemDetails(title, price, description, img.src);
                        });
                    });

                    // Show item details function
                    function showItemDetails(title, price, description, imgSrc) {
                        // Create modal overlay
                        const modal = document.createElement('div');
                        modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
                        modal.innerHTML = `
        <div class="bg-white rounded-3xl p-8 max-w-md mx-4 relative">
            <button class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 text-2xl" onclick="this.parentElement.parentElement.remove()">
                &times;
            </button>
            <img src="${imgSrc}" alt="${title}" class="w-full h-48 object-cover rounded-2xl mb-4">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">${title}</h3>
            <p class="text-gray-600 mb-4">${description}</p>
            <p class="text-2xl font-bold text-emerald-600 mb-6">${price}</p>
            <div class="flex gap-4">
                <button class="flex-1 bg-emerald-600 text-white py-3 rounded-xl font-semibold hover:bg-emerald-700 transition-colors" onclick="contactForItem('${title}')">
                    Contact for Details
                </button>
                <button class="flex-1 border-2 border-emerald-600 text-emerald-600 py-3 rounded-xl font-semibold hover:bg-emerald-50 transition-colors" onclick="this.parentElement.parentElement.parentElement.remove()">
                    Close
                </button>
            </div>
        </div>
    `;
                        document.body.appendChild(modal);

                        // Close modal when clicking outside
                        modal.addEventListener('click', (e) => {
                            if (e.target === modal) {
                                modal.remove();
                            }
                        });
                    }

                    // Contact for specific item
                    function contactForItem(itemName) {
                        const message = `Hi, I'm interested in ${itemName}. Can you provide more details?`;
                        const whatsappUrl = `https://wa.me/919900077949?text=${encodeURIComponent(message)}`;
                        window.open(whatsappUrl, '_blank');
                    }

                    // Smooth scroll for gallery view button
                    document.querySelector('.pulse-glow').addEventListener('click', () => {
                        document.querySelector('.py-20.bg-white').scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    });

                    // CTA Button functionality
                    document.querySelectorAll('button').forEach(btn => {
                        if (btn.textContent.includes('Call Now')) {
                            btn.addEventListener('click', () => {
                                window.location.href = 'tel:+919900077949';
                            });
                        }

                        if (btn.textContent.includes('Get Quote')) {
                            btn.addEventListener('click', () => {
                                const message = 'Hi, I would like to get a quote for your livestock.';
                                const whatsappUrl = `https://wa.me/YOUR_PHONE_NUMBER?text=${encodeURIComponent(message)}`;
                                window.open(whatsappUrl, '_blank');
                            });
                        }
                    });

                    // Initialize the gallery
                    document.addEventListener('DOMContentLoaded', () => {
                        assignCategories();

                        // Set initial styles for cards
                        galleryCards.forEach(card => {
                            card.style.transition = 'all 0.3s ease';
                            card.style.opacity = '1';
                            card.style.transform = 'translateY(0)';
                        });

                        // Handle URL hash for direct category links
                        if (window.location.hash) {
                            const category = window.location.hash.substring(1);
                            const targetBtn = Array.from(categoryBtns).find(btn =>
                                categoryMap[btn.textContent.trim()] === category
                            );
                            if (targetBtn) {
                                targetBtn.click();
                            }
                        }
                    });

                    // Add scroll animations for cards
                    const observerOptions = {
                        threshold: 0.1,
                        rootMargin: '0px 0px -50px 0px'
                    };

                    const observer = new IntersectionObserver((entries) => {
                        entries.forEach(entry => {
                            if (entry.isIntersecting) {
                                entry.target.style.opacity = '1';
                                entry.target.style.transform = 'translateY(0)';
                            }
                        });
                    }, observerOptions);

                    // Observe all gallery cards for scroll animations
                    galleryCards.forEach(card => {
                        card.style.opacity = '0';
                        card.style.transform = 'translateY(30px)';
                        card.style.transition = 'all 0.6s ease';
                        observer.observe(card);
                    });

                    // Add CSS animations dynamically
                    const style = document.createElement('style');
                    style.textContent = `
    .gallery-card {
        transition: all 0.3s ease;
    }
    
    .gallery-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }
    
    .overlay-content {
        transition: all 0.3s ease;
        opacity: 0;
        background: transparent;
    }
    
    .category-btn {
        transition: all 0.3s ease;
    }
    
    .category-btn.active {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(16, 185, 129, 0.3);
    }
    
    .pulse-glow {
        animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
        0% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4); }
        70% { box-shadow: 0 0 0 10px rgba(16, 185, 129, 0); }
        100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0); }
    }
`;
                    document.head.appendChild(style);
                </script>


