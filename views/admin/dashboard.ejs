<%- include('../partials/head.ejs') %>

    <body class="bg-gray-100">
        <nav class="bg-green-600 text-white shadow-lg">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">
                    <div class="flex items-center">
                        <img class="h-8 w-auto" src="/krushiyuga_logo.png" alt="Krushiyuga">
                        <span class="ml-2 text-xl font-bold">Admin Dashboard</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <span class="text-sm">Welcome, <%= admin.firstName %></span>
                        <a href="/admin/logout" class="text-white hover:text-gray-200">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <!-- Stats -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-green-100 text-green-600">
                            <i class="fas fa-box fa-2x"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm text-gray-500 uppercase">Total Products</p>
                            <p class="text-2xl font-semibold text-gray-800">
                                <%= totalProducts %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                            <i class="fas fa-envelope fa-2x"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm text-gray-500 uppercase">Total Inquiries</p>
                            <p class="text-2xl font-semibold text-gray-800">
                                <%= totalInquiries %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-white rounded-lg shadow mb-6">
                <div class="p-6">
                    <h2 class="text-lg font-semibold text-gray-800 mb-4">Quick Actions</h2>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        <a href="/admin/products"
                            class="flex items-center justify-center p-4 bg-green-50 rounded-lg hover:bg-green-100">
                            <i class="fas fa-box mr-2 text-green-600"></i>
                            <span>Manage Products</span>
                        </a>
                        <a href="/admin/inquiries"
                            class="flex items-center justify-center p-4 bg-blue-50 rounded-lg hover:bg-blue-100">
                            <i class="fas fa-envelope mr-2 text-blue-600"></i>
                            <span>View Inquiries</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Recent Products -->
            <div class="bg-white rounded-lg shadow mb-6">
                <div class="p-6">
                    <h2 class="text-lg font-semibold text-gray-800 mb-4">Recent Products</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead>
                                <tr>
                                    <th
                                        class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Name</th>
                                    <th
                                        class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Category</th>
                                    <th
                                        class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Price</th>
                                    <th
                                        class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Quantity</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% products.slice(0, 5).forEach(product=> { %>
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            <%= product.name %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= product.category %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">â‚¹<%= product.price
                                                %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= product.quantity %>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Recent Inquiries -->
            <div class="bg-white rounded-lg shadow">
                <div class="p-6">
                    <h2 class="text-lg font-semibold text-gray-800 mb-4">Recent Inquiries</h2>
                    <div class="space-y-4">
                        <% contacts.forEach(contact=> { %>
                            <div class="border-l-4 border-green-500 bg-green-50 p-4">
                                <div class="flex justify-between">
                                    <div>
                                        <p class="font-medium text-green-800">
                                            <%= contact.firstName %>
                                                <%= contact.lastName %>
                                        </p>
                                        <p class="text-sm text-green-700">
                                            <%= contact.email %>
                                        </p>
                                    </div>
                                    <div class="text-sm text-green-600">
                                        <%= new Date(contact.createdAt).toLocaleDateString() %>
                                    </div>
                                </div>
                                <p class="mt-2 text-sm text-green-700">Ref: <%= contact.referenceNumber %>
                                </p>
                            </div>
                            <% }); %>
                    </div>
                </div>
            </div>
        </div>

        <script>
            // Add any dashboard-specific JavaScript here
        </script>
    </body>

    </html>